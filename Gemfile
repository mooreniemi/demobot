gem 'cinch-identify'

# datastore stuff
gem 'sequel'
gem 'sequel_pg'

# deploying on heroku
gem 'bot' # https://github.com/Beakr/bot
gem 'newrelic_rpm'

# misc
gem 'pry'
gem 'factory_girl'
gem 'rspec'
